<h1>Listing question_takens</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>
      <th>Attempts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_takens.each do |question_taken| %>
      <tr>
        <td><%= question_taken.question %></td>
        <td><%= question_taken.user %></td>
        <td><%= question_taken.attempts %></td>
        <td><%= link_to 'Show', question_taken %></td>
        <td><%= link_to 'Edit', edit_question_taken_path(question_taken) %></td>
        <td><%= link_to 'Destroy', question_taken, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

