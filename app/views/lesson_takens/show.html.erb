<%- model_class = LessonTaken -%>
<div class="page-header">
  <h1><%=t '.title', :default => LessonTaken %></h1>
</div>

<div class="fieldset">
  <dl>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              lesson_takens_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_lesson_taken_path(@lesson_taken), :class => 'btn btn-default' %>
